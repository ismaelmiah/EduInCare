<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - FinalProject</title>
    <link href="~/css/select2.css" rel="stylesheet" />
    <link href="~/css/bootstrap.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="~/css/site.css" />
    <link href="~/css/styles.min.css" rel="stylesheet" />
    <script src="~/AdminPanel/plugins/jquery/jquery.min.js"></script>
    <script src="~/js/select2.js"></script>
    @await RenderSectionAsync("Styles", false)
</head>
<body>
    <header>
        @*<partial name="~/Views/Home/_HeaderView.cshtml" />*@

        <nav class="navbar navbar-light navbar-expand-md sticky-top text-left bg-light" style="height: 80px;">
            <div class="container-fluid">
                <a class="navbar-brand" href="/">
                    <img src="/Assets/img/logo.png" width="100px"/>
                    <h5>EduInCare</h5>
                </a>
                <button data-toggle="collapse" class="navbar-toggler" data-target="#navcol-1">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="navbar-toggler-icon" />
                </button>
                <div class="collapse navbar-collapse" id="navcol-1">
                    <ul class="navbar-nav ml-auto">
                        <li class="nav-item">
                            <a class="nav-link" href="/" style="font-size: 16px;">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-action="Classes">Classes</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-action="Teachers">Teachers</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-action="Events">Events</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-action="Gallery">Gallery</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-action="ContactUs">Contact Us</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <main>
        @RenderBody()
    </main>
<footer class="border-top text-muted footer-clean">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-sm-4 col-md-3 item">
                <h3>Get In Touch</h3>
                <ul>
                    <li><a href="#">Web design</a></li>
                    <li><a href="#">Development</a></li>
                    <li><a href="#">Hosting</a></li>
                </ul>
            </div>
            <div class="col-sm-4 col-md-3 item">
                <h3>useful Links</h3>
                <ul>
                    <li><a href="#">Job openings</a></li>
                    <li><a href="#">Employee success</a></li>
                    <li><a href="#">Benefits</a></li>
                </ul>
            </div>
            <div class="col-lg-3 item social">
                <a href="#"><i class="fab fa-facebook-square"></i></a
                ><a href="#"><i class="icon ion-social-twitter"></i></a
                ><a href="#"><i class="icon ion-social-snapchat"></i></a
                ><a href="#"><i class="icon ion-social-instagram"></i></a>
                <p class="copyright">Final Project © 2021</p>
            </div>
        </div>
    </div>
</footer>
<script>
    $(document).ready(function () {
        /** add active class and stay opened when selected */
        var url = window.location;

        // for sidebar menu entirely but not cover treeview
        $('ul a').filter(function () {
            return this.href == url;
        }).addClass('active');
    })
</script>
    @*<script src="~/lib/jquery/dist/jquery.min.js"></script>*@
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
