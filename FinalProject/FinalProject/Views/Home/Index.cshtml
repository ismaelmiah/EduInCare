@model WebsiteModel
@{
    ViewData["Title"] = "Home Page";
}
 
<div class="jumbotron text-center m-0 p-0">
    @if (Model.Header.ShowBannerImage)
    {
        <img style="width: 100%" src="@Model.Header.ImagePath" alt="">
    }
    else
    {
        <img style="width: 100%" src="/Banner.png" alt="">
    }
</div>

<nav class="navbar navbar-expand-sm bg-dark navbar-dark">
    <a class="navbar-brand" href="#">Navbar</a>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#collapsibleNavbar">
        <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="collapsibleNavbar">
        <ul class="navbar-nav">
            <li class="nav-item">
                <a class="nav-link" href="#">Link</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="#">Link</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="#">Link</a>
            </li>
        </ul>
    </div>
</nav>


<div class="jumbotron text-center">
    <p>@Model.Advertise.Title</p>
</div>

<div class="container" style="margin-top:30px">
    <div class="row">
        <div class="col-sm-4">
            <h2>Notice Board</h2>
            <ul class="nav nav-pills flex-column">
                @foreach (var notice in Model.Notice.NoticeList)
                {
                    <li class="nav-item">
                        <a class="nav-link" href="#">@notice.Title</a>
                    </li>
                }
            </ul>
            <hr class="d-sm-none">
        </div>
        <div class="col-sm-8">
            @foreach (var post in Model.Post.PostList)
            {
                <h2>@post.Title</h2>
                <h5>@post.CreateDate.ToString("MM/dd/yyyy hh:mm tt")</h5>
                <p>@post.Description</p>
                <br>
            }
        </div>
    </div>
</div>

<div class="p-2 jumbotron text-center">
    <p class="p-0 m-0">@Model.Footer.Copyright</p>
</div>
