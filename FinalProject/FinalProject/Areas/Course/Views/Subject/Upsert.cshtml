@model SubjectModel

@{
    ViewData["Title"] = "Upsert";
    ViewData["subtitle"] = "Add Subject";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLTE.cshtml";
}

<div class="row">
    <div class="col-md-2">
    </div>
    <div class="col-md-6">
        <div class="card card-info">
            <div class="card-header">
                <h3 class="card-title text-center">@ViewData["subtitle"]</h3>
            </div>
        </div>
        <form class="form-horizontal" asp-antiforgery="true" method="post" enctype="multipart/form-data" asp-action="Upsert">
            <div class="card-body">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input asp-for="Id" type="hidden"/>
                <div class="row">
                    <div class="col-8">
                        <div class="form-group row">
                            <div class="col-3">
                                <label asp-for="Name"></label>
                            </div>
                            <div class="col-9">
                                <input asp-for="Name" class="form-control" />
                                <span asp-validation-for="Name" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="form-group row">
                            <div class="col-3">
                                <label asp-for="Code"></label>
                            </div>
                            <div class="col-9">
                                <input asp-for="Code" class="form-control" />
                                <span asp-validation-for="Code" class="text-danger"></span>
                            </div>
                        </div>
                    </div>
                    <div class="col-4">
                        <div class="form-group row">
                            <div class="col-4">
                                <label for="CourseId" class="control-label">Course</label>
                            </div>
                            <div class="col-8">
                                <select asp-for="CourseId" asp-items="Model.CourseList" class="form-control"></select>
                                <span asp-validation-for="CourseId" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="form-group row">
                            <div class="col-8">
                                <label asp-for="ExcludeInResult"></label>
                            </div>
                            <div class="col-4">
                                <input asp-for="ExcludeInResult" class="form-control" />
                                <span asp-validation-for="ExcludeInResult" class="text-danger"></span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="card-footer">
                <div class="form-group row mb-0">
                    <div class="col-6 text-left">
                        <input type="submit" value="Create" class="btn btn-primary" />
                    </div>
                    <div class="col-6 text-right">
                        <a asp-area="Course" asp-controller="Subject" asp-action="Index">Back to List</a>
                    </div>
                </div>
            </div>
        </form>
    </div>
    <div class="col-md-2"></div>
</div>