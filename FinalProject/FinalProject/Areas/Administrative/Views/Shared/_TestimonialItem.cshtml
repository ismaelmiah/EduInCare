@model TestimonialItemModel
<div class="form-group row">
    <div class="col-4">
        <label asp-for="Name"></label>
    </div>
    <div class="col-8">
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
</div>
<div class="form-group row">
    <div class="col-4">
        <label asp-for="Subtitle"></label>
    </div>
    <div class="col-8">
        <input asp-for="Subtitle" class="form-control" />
        <span asp-validation-for="Subtitle" class="text-danger"></span>
    </div>
</div>
<div class="form-group row">
    <div class="col-4">
        <label asp-for="Description"></label>
    </div>
    <div class="col-8">
        <textarea asp-for="Description" class="form-control"></textarea>
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>
</div>
<div class="form-group row">
    <div class="col-4">
        <label asp-for="UserPhotoFile"></label>
    </div>
    <div class="col-8">
        <textarea asp-for="UserPhotoFile" class="form-control"></textarea>
        <span asp-validation-for="UserPhotoFile" class="text-danger"></span>
    </div>
</div>