@model HomePageModel

@{
    ViewData["subtitle"] = "Home Page";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLTE.cshtml";
}
@section Title
{
    <title>Homepage Settings</title>
}
<div class="card card-info">
    <div class="card-header">
        <h3 class="card-title text-center">@ViewData["subtitle"]</h3>
    </div>
</div>
<form asp-antiforgery="true" method="post" enctype="multipart/form-data" asp-action="Homepage">
    <div class="card-body">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group row">
            <label class="text-cyan font-weight-bold">Slider</label>
        </div>
        <div id="Sliders">
            @if (Model.Sliders != null)
            {
                for (var i = 0; i < Model.Sliders.Count; i++)
                {
                    <partial name="_Slider" for="Sliders[i]" />
                }
            }
        </div>
        <div class="row justify-content-end">
            <button class="btn btn-primary" id="addSlide">Add Slide</button>
        </div>
        <div class="form-group row">
            <label class="text-cyan font-weight-bold">Feature Info</label>
        </div>
        @if (Model.FeatureInfos != null)
        {
            for (int i = 0; i < Model.FeatureInfos.Count; i++)
            {
                <partial name="_FeatureInfo" model="Model.FeatureInfos[i]" />
            }
        }
        <div class="row justify-content-end">
            <button class="btn btn-primary">Add Feature</button>
        </div>
        <div class="form-group row">
            <label class="text-cyan font-weight-bold">Facility</label>
        </div>
        <div class="form-group row">
            <div class="col-4">
                <label asp-for="FacilitiesModel.Heading"></label>
            </div>
            <div class="col-8">
                <input asp-for="FacilitiesModel.Heading" class="form-control" />
                <span asp-validation-for="FacilitiesModel.Heading" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group row">
            <div class="col-4">
                <label asp-for="FacilitiesModel.Description"></label>
            </div>
            <div class="col-8">
                <textarea asp-for="FacilitiesModel.Description" class="form-control"></textarea>
                <span asp-validation-for="FacilitiesModel.Description" class="text-danger"></span>
            </div>
        </div>
        @if (Model.FacilitiesModel.FeatureInfos != null)
        {
            for (int i = 0; i < Model.FacilitiesModel.FeatureInfos.Count; i++)
            {
                <partial name="_FeatureInfo" model="Model.FacilitiesModel.FeatureInfos[i]" />
            }
        }
        <div class="row justify-content-end">
            <button class="btn btn-primary">Add Facility</button>
        </div>
        <div class="form-group row">
            <label class="text-cyan font-weight-bold">Events</label>
        </div>
        <div class="form-group row">
            <div class="col-4">
                <label asp-for="EventsModel.Heading"></label>
            </div>
            <div class="col-8">
                <input asp-for="EventsModel.Heading" class="form-control" />
                <span asp-validation-for="EventsModel.Heading" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group row">
            <div class="col-4">
                <label asp-for="EventsModel.Description"></label>
            </div>
            <div class="col-8">
                <textarea asp-for="EventsModel.Description" class="form-control"></textarea>
                <span asp-validation-for="EventsModel.Description" class="text-danger"></span>
            </div>
        </div>
        @if (Model.EventsModel.EventItems != null)
        {
            for (int i = 0; i < Model.EventsModel.EventItems.Count; i++)
            {
                <partial name="_FeatureInfo" model="Model.EventsModel.EventItems[i]" />
            }
        }
        <div class="row justify-content-end">
            <button class="btn btn-primary">Add Event</button>
        </div>
        <div class="form-group row">
            <label class="text-cyan font-weight-bold">Testimonials</label>
        </div>
        <div class="form-group row">
            <div class="col-4">
                <label asp-for="TestimonialsModel.Heading"></label>
            </div>
            <div class="col-8">
                <input asp-for="TestimonialsModel.Heading" type="Date" class="form-control" />
                <span asp-validation-for="TestimonialsModel.Heading" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group row">
            <div class="col-4">
                <label asp-for="TestimonialsModel.Description"></label>
            </div>
            <div class="col-8">
                <textarea asp-for="TestimonialsModel.Description" class="form-control"></textarea>
                <span asp-validation-for="TestimonialsModel.Description" class="text-danger"></span>
            </div>
        </div>
        <div class="row justify-content-end">
            <button class="btn btn-primary">Add Testimonial</button>
        </div>
        @*@for (int i = 0; i < Model.TestimonialsModel.TestimonialItemModels.Count; i++)
            {
                <partial name="_FeatureInfo" model="Model.TestimonialsModel.TestimonialItemModels[i]" />
            }*@
    </div>
    <div class="card-footer">
        <div class="form-group row mb-0">
            <div class="col-6 text-left">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </div>
    </div>
</form>

@section Scripts
{
    <script type="text/javascript">
        $(document).ready(function() {
            $("#addSlide").click(function(e) {
                e.preventDefault();

                const noOfSlide = $("#Sliders > div").length;

                var slide = `
<div id="newSlide">
    <div class="form-group row">
        <label class="text-indigo font-weight-bold">Slide No #${noOfSlide+1}</label>
    </div>
    <div class="form-group row">
            <div class="col-4">
                <label for="Sliders_${noOfSlide}__Heading">Heading</label>
            </div>
            <div class="col-8">
                <input class="form-control" type="text" id="Sliders_${noOfSlide}__Heading" name="Sliders[${noOfSlide}].Heading" value="">
                <span class="text-danger field-validation-valid" data-valmsg-for="Sliders[${noOfSlide}].Heading" data-valmsg-replace="true"></span>
            </div>
    </div>
    <div class="form-group row">
            <div class="col-4">
                <label for="Sliders_${noOfSlide}__SubHeading">SubHeading</label>
            </div>
            <div class="col-8">
                <input class="form-control" type="text" id="Sliders_${noOfSlide}__SubHeading" name="Sliders[${noOfSlide}].SubHeading" value="">
                <span class="text-danger field-validation-valid" data-valmsg-for="Sliders[${noOfSlide}].SubHeading" data-valmsg-replace="true"></span>
            </div>
    </div>
    <div class="form-group row">
            <div class="col-4">
                <label for="Sliders_${noOfSlide}__SlideImage">SlideImage</label>
            </div>
            <div class="col-8">
                <input class="form-control" type="file" id="Sliders_${noOfSlide}__SlideImage" name="Sliders[${noOfSlide}].SlideImage">
                <span class="text-danger field-validation-valid" data-valmsg-for="Sliders[${noOfSlide}].SlideImage" data-valmsg-replace="true"></span>
            </div>
    </div>
</div>
                 `;

                $("#Sliders").append(slide);
            });

        });
    </script>
}
