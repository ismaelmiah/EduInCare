        <span asp-validation-for="ParentsInfo.FatherMobileNo" class="text-danger"></span>
    </div>
    <div class="form-group col">
        <label asp-for="ParentsInfo.MotherMobileNo" class="control-label"></label>
        <input asp-for="ParentsInfo.MotherMobileNo" class="form-control" />
        <span asp-validation-for="ParentsInfo.MotherMobileNo" class="text-danger"></span>
    </div>
    <div class="form-group col">
        <label asp-for="ParentsInfo.GuardianMobileNo" class="control-label"></label>
        <input asp-for="ParentsInfo.GuardianMobileNo" class="form-control" />
        <span asp-validation-for="ParentsInfo.GuardianMobileNo" class="text-danger"></span>
    </div>
