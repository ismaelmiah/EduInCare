                                    </div>
                                    <div class="col-md-3">
                                        <label for="">Religion</label>
                                    </div>
                                    <div class="col-md-3">
                                        <p for="">: @Model.Religion.ToString()</p>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-md-3">
