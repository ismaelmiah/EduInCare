                                        <label for="">Username</label>
                                    </div>
                                    <div class="col-md-3">
                                        <p for="">: @Model.UserName</p>
                                    </div>
                                    <div class="col-md-3">
                                        <label for="">Status</label>
                                    </div>
                                    <div class="col-md-3">
                                        <p for="">
                                            :
                                            @if (Model.RegistrationModel.Status == true)
                                            {
                                                <span class="bg-green badge">Active</span>
                                            }
                                            else
                                            {
                                                <span class="bg-green badge">In Active</span>
                                            }
                                        </p>
                                    </div>
                                </div>
                            </div>
