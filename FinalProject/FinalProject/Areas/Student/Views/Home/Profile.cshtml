@using Foundation.Library.Enums
@model StudentProfileView

@{
    Layout = "~/Areas/Admin/Views/Shared/_AdminLTE.cshtml";
}
@section Title
{
    <title>Profile</title>
}
<!-- Content Header (Page header) -->
<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <div class="btn-group" role="group" aria-label="Basic example">
                    <a href="#" class="btn btn-sm btn-outline-primary"><i class="fa fa-print"></i> Print</a>
                    <a href="#" target="_blank" class="btn btn-sm btn-outline-info"><i class="far fa-id-card"></i> ID Card</a>
                    <a href="#" class="btn btn-sm btn-outline-warning"><i class="fas fa-edit"></i> Edit</a>
                </div>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a asp-action="Index" asp-controller="Home" asp-area="Admin">Dashboard</a></li>
                    <li class="breadcrumb-item"><a asp-action="Index" asp-controller="Home" asp-area="Admin">Student</a></li>
                    <li class="breadcrumb-item active">Profile</li>
                </ol>
            </div>
        </div>
    </div><!-- /.container-fluid -->
</section>

<!-- ./Section header -->
<!-- Main content -->
<section class="content">
    <div class="row">
        <div class="col-md-12">
            <div class="row">
                <div class="col-sm-3">
                    <div class="card card-info">
                        <div class="card-body">
                            <div class="text-center">
                                <img class="profile-user-img img-circle" src="@Model.ImagePath">
                            </div>
                            <h3 class="profile-username text-center">@Model.Name</h3>
                            <p class="text-muted text-center">@Model.CourseModel.Title</p>
                            <ul class="list-group list-group-unbordered">
                                <li class="list-group-item" style="background-color: #FFF">
                                    <b>Registration No.</b> <a class="pull-right">@Model.RegistrationModel.RegistrationNo</a>
                                </li>
                                <li class="list-group-item" style="background-color: #FFF">
                                    <b>ID Card No.</b> <a class="pull-right">@Model.RegistrationModel.IdCardNo</a>
                                </li>
                                <li class="list-group-item" style="background-color: #FFF">
                                    <b>Phone</b> <a class="pull-right">@Model.MobileNo</a>
                                </li>
                                <li class="list-group-item" style="background-color: #FFF">
                                    <b>Email</b> <a class="pull-right">@Model.Email</a>
                                </li>
                            </ul>
                        </div>
                    </div>
                </div>
                <div class="col-sm-9">
                    <div class="nav-tabs-custom">
                        <ul class="nav nav-tabs">
                            <li class="nav-item">
                                <a class="nav-link active" data-toggle="tab" aria-current="page" href="#information">Profile</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" data-toggle="tab" href="#subject">Subjects</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" data-toggle="tab" href="#attendance">Attendance</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" data-toggle="tab" href="#marks">Marks &amp; Result</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" data-toggle="tab" href="#invoices">Invoice</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" data-toggle="tab" href="#payments">Payment</a>
                            </li>
                        </ul>
                        <div class="mt-3 tab-content">
                            <div class="tab-pane active" id="information">
                                <p class="text-info" style="font-size: 16px; border-bottom: 1px solid #eee;">Personal Info:</p>
                                <div class="row">
                                    <div class="col-md-3">
                                        <label for="">Full Name</label>
                                    </div>
                                    <div class="col-md-3">
                                        <p for="">: @Model.Name</p>
                                    </div>
                                    <div class="col-md-3">
                                        <label for="">Date of Birth</label>
                                    </div>
                                    <div class="col-md-3">
                                        <p for="">: @Model.DateOfBirth.ToShortDateString()</p>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-md-3">
                                        <label for="">Gender</label>
                                    </div>
                                    <div class="col-md-3">
