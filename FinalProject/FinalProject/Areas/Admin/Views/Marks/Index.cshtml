@model MarksModel

@section Title
{
    <title>Marks</title>
}
<!-- Content Header (Page header) -->
<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1>Marks</h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a asp-action="Index" asp-controller="Home" asp-area="Admin">Dashboard</a></li>
                    <li class="breadcrumb-item active">Marks</li>
                </ol>
            </div>
        </div>
    </div><!-- /.container-fluid -->
</section>

<!-- Main content -->
<section class="content">
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header">
                    <div class="row">
                        <div class="col-md-4 text-left">
                            <h2 class="card-title">Filters:</h2>
                        </div>
                    </div>
                    <div class="row">
                        <div class="form-group row col-3">
                            <div class="col-5">
                                <label asp-for="AcademicYearId"></label>
                            </div>
                            <div class="col-7">
                                <select asp-for="AcademicYearId" asp-items="Model.AcademicYearList" class="form-control"></select>
                                <span asp-validation-for="AcademicYearId" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="form-group row col-md-3">
                            <div class="col-3">
                                <label class="card-title" asp-for="CourseId"></label>
                            </div>
                            <div class="col-9">
                                <select asp-for="CourseId" asp-items="Model.CourseList" class="form-control"></select>
                                <span asp-validation-for="CourseId" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="form-group row col-md-3">
                            <div class="col-3">
                                <label class="card-title" asp-for="SectionId"></label>
                            </div>
                            <div class="col-9">
                                <select asp-for="SectionId" asp-items="Model.SectionList" class="form-control"></select>
                                <span asp-validation-for="SectionId" class="text-danger"></span>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="form-group row col-md-3">
                            <div class="col-3">
                                <label class="card-title" asp-for="SubjectId"></label>
                            </div>
                            <div class="col-9">
                                <select asp-for="SubjectId" asp-items="Model.SubjectList" class="form-control"></select>
                                <span asp-validation-for="SubjectId" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="form-group row col-3">
                            <div class="col-3">
                                <label class="card-title" asp-for="ExamId"></label>
                            </div>
                            <div class="col-9">
                                <select asp-for="ExamId" asp-items="Model.ExamList" class="form-control"></select>
                                <span asp-validation-for="ExamId" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="form-group col">
                            <div class="btn-group" role="group" aria-label="Basic example">
                                <button type="button" id="getMarks" class="btn btn-info">Get Marks</button>
                                <button type="button" id="updateMarks" class="btn btn-warning">Update</button>
                                <button type="button" id="entryMarks" class="btn btn-success">Entry Marks</button>
                            </div>
                        </div>
                    </div>
                </div>
                <!-- /.card-header -->
                <div class="card-body">
                    <partial name="_DeletePopupPartial" />
                    <div id="markTable"></div>
                    @*
                        <table id="grades" class="text-center table table-bordered table-striped">
                            <thead>
                                <tr>
                                    <th>Name</th>
                                    <th>Rule</th>
                                    <th>Action</th>
                                </tr>
                            </thead>
                        </table>*@
                </div>
                <!-- /.card-body -->
            </div>
            <!-- /.card -->
        </div>
        <!-- /.col -->
    </div>
    <!-- /.row -->
</section>
<!-- /.content -->

@section scripts
{
    <script src="/AdminPanel/plugins/datatables/jquery.dataTables.js"></script>
    <script src="/AdminPanel/plugins/datatables-bs4/js/dataTables.bootstrap4.js"></script>
    <script src="~/js/marks.js"></script>
}
