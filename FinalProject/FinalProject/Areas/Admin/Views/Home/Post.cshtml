@model FinalProject.Web.Areas.Admin.Models.PostViewModel
@{
    ViewData["Title"] = "Post Settings";
}


<div class="row">
    <div class="col-3"></div>
    <div class="col-6">
        <!-- Horizontal Form -->
        <div class="card card-info  mt-lg-5">
            <div class="card-header">
                <h3 class="card-title">@ViewData["Title"]</h3>
            </div>
            <!-- /.card-header -->
            <!-- form start -->
            <form class="form-horizontal" asp-area="Admin" asp-controller="Home" asp-action="Post" asp-antiforgery="true"
                  method="post" enctype="multipart/form-data">
                <div class="card-body">
                    <div class="form-group row">
                        <label asp-for="Title" class="col-sm-4 col-form-label"></label>
                        <input asp-for="Title" class="col-sm-8 form-control" />
                    </div>
                    <div class="form-group row">
                        <label asp-for="Description" class="col-sm-4 col-form-label"></label>
                        <textarea asp-for="Description" class="col-sm-8 form-control" row="5"></textarea>
                    </div>
                    <div class="form-group row">
                        <label asp-for="IsActive" class="col-sm-4 form-check-label"></label>
                        <input asp-for="IsActive" class="col-sm-8 form-control" />
                    </div>
                </div>
                <!-- /.card-body -->
                <div class="card-footer">
                    <button type="submit" class="btn btn-info">Create Post</button>
                    <a asp-action="Index" class="btn btn-default float-right">Cancel</a>
                </div>
                <!-- /.card-footer -->
            </form>
        </div>
        <!-- /.card -->
    </div>
    <div class="col-3"></div>
</div>