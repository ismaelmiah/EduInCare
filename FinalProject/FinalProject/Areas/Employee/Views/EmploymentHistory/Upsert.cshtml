    Layout = "~/Areas/Student/Views/Shared/_StudentLayout.cshtml";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Upsert</title>
</head>
<body>

<h4>EmploymentHistoryModel</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Upsert">
