@using Foundation.Library.Enums
@using Membership.Library.Entities
@model EmployeeFormViewModel
@{
    ViewData["Title"] = "Employee Application";
    ViewData["subtitle"] = "Employee Form";
    ViewData["Info"] = "Employee Info";
    Layout = "~/Areas/Student/Views/Shared/_StudentLayout.cshtml";
    if (Model.Id != new Guid())
    {
        //edit
        ViewData["Title"] = "Update Employee Application";
    }

}
<div class="row">
    <div class="col-md-12">
        <div class="card card-info">
            <div class="card-header">
                <h3 class="card-title text-center">@ViewData["Title"]</h3>
            </div>
            <form class="form-horizontal" asp-antiforgery="true" method="post" enctype="multipart/form-data" asp-action="Upsert">
                @if (Model.Id != new Guid())
                {
                    <input type="hidden" asp-for="Id" />
                }
                <div class="card-body">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                    <label class="text-info font-weight-bold">Employee Info</label>
                    <div class="row">
                        <div class="col-md-12">
                            <div class="row">
                                <div class="col">
                                    <div class="form-group">
                                        <label asp-for="Name"></label>
                                        <input asp-for="Name" class="form-control" />
                                        <span asp-validation-for="Name" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="col">
                                    <div class="form-group">
                                        <label asp-for="FatherName"></label>
                                        <input asp-for="FatherName" class="form-control" />
                                        <span asp-validation-for="FatherName" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="col">
                                    <div class="form-group">
                                        <label asp-for="MotherName"></label>
                                        <input asp-for="MotherName" class="form-control" />
                                        <span asp-validation-for="MotherName" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="col">
                                    <div class="form-group">
                                        <label asp-for="Nid"></label>
                                        <input asp-for="Nid" class="form-control" />
                                        <span asp-validation-for="Nid" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="col">
                                    <div class="form-group">
                                        <label asp-for="Gender"></label>
                                        <select class="form-control" asp-for="Gender" asp-items="Html.GetEnumSelectList<Gender>()"></select>
                                        <span asp-validation-for="Gender" class="text-danger"></span>
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col">
                                    <div class="form-group">
                                        <label asp-for="Religion"></label>
                                        <select class="form-control" asp-for="Religion" asp-items="Html.GetEnumSelectList<Religion>()"></select>
                                        <span asp-validation-for="Religion" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="form-group col">
                                    <label asp-for="MaritalStatus"></label>
                                    <select class="form-control" asp-for="MaritalStatus" asp-items="Html.GetEnumSelectList<MaritalStatus>()"></select>
                                    <span asp-validation-for="MaritalStatus" class="text-danger"></span>
                                </div>
                                <div class="form-group col">
                                    <label asp-for="MobileNo"></label>
                                    <input asp-for="MobileNo" class="form-control" />
                                    <span asp-validation-for="MobileNo" class="text-danger"></span>
                                </div>
                                <div class="form-group col">
                                    <label asp-for="Nationality"></label>
                                    <input asp-for="Nationality" class="form-control" />
                                    <span asp-validation-for="Nationality" class="text-danger"></span>
                                </div>
                                <div class="form-group col">
                                    <label for="Doj">Date Of Birth</label>
                                    <input asp-for="Doj" class="form-control" />
                                    <span asp-validation-for="Doj" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="row">
                                <div class="form-group col-2">
                                    <label asp-for="Photo"></label>
                                    <input asp-for="Photo" onchange="readURL(this);" class="form-control-file" />
                                    <span asp-validation-for="Photo" class="text-danger"></span>
                                </div>
                                <div class="col-2">
                                    <div id="previewstudentphoto" style="height: 200px; width: 220px;" class="border">
                                        @if (Model.ImagePath != null)
                                        {
                                            <img id="blah" style="width: 220px; height: 200px;" src="@Model.ImagePath" alt="Photo">
                                        }
                                        else
                                        {
                                            <img id="blah" style="width: 220px; height: 200px;" src="#" alt="Photo">
                                        }
                                    </div>
                                </div>
                                <div class="col">
                                    <label>Present Address</label>
                                    <partial name="~/Areas/Student/Views/Home/_PermanentAddressFormVIew.cshtml" for="PermanentAddress" />
                                </div>
                                <div class="col">
                                    <label>Permanent Address</label>
                                    <partial name="~/Areas/Student/Views/Home/_PresentAddressFormVIew.cshtml" for="PresentAddress" />
                                </div>
                                <div class="form-group col-2">
                                    <label for="DesignationId">Designation</label>
                                    <select class="form-control" asp-for="DesignationId" asp-items="Model.DesignationList"></select>
                                    <span asp-validation-for="DesignationId" class="text-danger"></span>
                                </div>
                            </div>
                            <label class="mt-5 text-info font-weight-bold">Education Info</label>
                            <div class="row">

                            </div>
                        </div>
                    </div>
                </div>
                <div class="card-footer">
                    <div class="form-group row mb-0">
                        <div class="col text-center">
                            @if (Model.Id == new Guid())
                            {
                                <input type="submit" value="Application Submit" class="btn btn-lg btn-outline-primary" />
                            }
                            else
                            {
                                <input type="submit" value="Application Update" class="btn btn-lg btn-outline-warning" />
                            }
                        </div>
                    </div>
                </div>
            </form>

        </div>
    </div>
</div>

@section Scripts
{
    <script>
        var imageTag = document.getElementById('blah');
        imageTag.style.border = "2px solid";
        imageTag.style.paddingTop = "100px";
        imageTag.style.paddingBottom = "100px";
        imageTag.style.paddingLeft = "75px";
        imageTag.style.paddingRight = "75px";
        if (imageTag.src !== "#") {
            imageTag.style.removeProperty('padding');
            imageTag.style.removeProperty('border');
        }
        function readURL(input) {
            if (input.files && input.files[0]) {
                var reader = new FileReader();
                reader.onload = function (e) {
                    document.getElementById('blah').style.removeProperty('padding');
                    document.getElementById('blah').style.removeProperty('border');
                    document.getElementById('blah').src = e.target.result;
                    document.getElementById('blah').width = 220;
                    document.getElementById('blah').height = 200;
                };

                reader.readAsDataURL(input.files[0]);
            }
        }
    </script>
}
